{% extends 'index.html.twig' %}

{% block title %}Détails Enseigne {% endblock %}
 {% block stylesheets %}{% endblock %}


{% block body %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Détails Enseigne</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('admin') }}">Home</a></li>
                        <li class="breadcrumb-item "><a href="{{ path('station_list') }}">Enseignes</a> </li>
                        <li class="breadcrumb-item active">Détails Enseigne</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <strong>Enseigne : </strong>
                    {{ station.nom }}</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">
{#                <div> <p>#}
{#                        <strong> Gouvernorat : </strong>#}
{#                        {{ station.gouvernorat }}#}
{#                    </p>#}
{#                </div><br>#}
{#                <div> <p>#}
{#                        <strong> Adresse : </strong>#}
{#                        {{ station.adresse }}#}
{#                    </p>#}
{#                </div><br>#}
                <div>
                    <p>
                        <strong>Magasins: </strong>
                        {% set i=0 %}
                        {% for panel in panels %}
                            {% if panel.station.id==station.id  %}
                                {% set i=i+1  %}
                            {% endif  %}
                        {% endfor %}
                        {{ i }}
                    </p>
                </div><br>
{#                <div> <p>#}
{#                        <strong> Longitude : </strong>#}
{#                        {{ station.longitude }}#}
{#                    </p>#}
{#                </div><br>#}
{#                <div> <p>#}
{#                        <strong> Latitude : </strong>#}
{#                        {{ station.latitude }}#}
{#                    </p>#}
{#                </div><br>#}
                <div> <p>
                        <strong> Générée par : </strong>
                        {{ station.user }}
                    </p>
                </div><br>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script>
        document.getElementById('stations').classList.add("active");
    </script>
{% endblock %}